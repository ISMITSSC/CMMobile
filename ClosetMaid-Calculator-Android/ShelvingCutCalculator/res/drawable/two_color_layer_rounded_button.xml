<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="transparent">

    <!-- shadow -->
      <item
         android:top="0dp"
         android:bottom="0dp"
       >
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <corners
                android:bottomLeftRadius="@dimen/dp10_s"
                android:bottomRightRadius="@dimen/dp10_s"
                android:radius="@dimen/dp2_s"
                android:topLeftRadius="@dimen/dp10_s"
                android:topRightRadius="@dimen/dp10_s" />
        </shape>
    </item>
    <!-- First par is a gradient -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:bottom="@dimen/dp1_s">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:endColor="#c8c7c7"
                android:startColor="#d3d2d2" />
             <corners
                android:bottomLeftRadius="@dimen/dp10_s"
                android:bottomRightRadius="@dimen/dp10_s"
                android:radius="@dimen/dp2_s"
                android:topLeftRadius="@dimen/dp10_s"
                android:topRightRadius="@dimen/dp10_s" />
        </shape>
    </item>
    <!-- Second part is plain color. Slightly transparent -->
    <item
        android:bottom="@dimen/dp25_s"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:endColor="#dedddd"
                android:startColor="#e9e8e8" />
             <corners
                android:radius="@dimen/dp2_s"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/dp10_s"
                android:topRightRadius="@dimen/dp10_s"
                />
        </shape>
    </item>

</layer-list>