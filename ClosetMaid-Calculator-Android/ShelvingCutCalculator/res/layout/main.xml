<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tss="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <com.tss.views.TSSView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_closed_start"
            tss:tss_y="0.05"
            tss:tss_width="0.95"
            tss:tss_scaleMode="byWidth" />

        <com.tss.views.TSSButton
            android:id="@+id/btn_shelving_calculator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_shelving_cut_selector"
            tss:tss_scaleMode="byWidth"
            tss:tss_originY="1"
            tss:tss_width="0.9"
            android:layout_centerHorizontal="true"
            tss:tss_y="0.49" />

        <com.tss.views.TSSButton
            android:id="@+id/btn_hardware_calculator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_hardware_calculator_selector"
            tss:tss_scaleMode="byWidth"
            android:layout_centerHorizontal="true"
            tss:tss_width="0.9"
            tss:tss_y="0.51" />

        <com.tss.views.TSSView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/logo_emerson"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10_s"
            android:layout_centerHorizontal="true"
            tss:tss_width="0.4"
            tss:tss_scaleMode="byWidth"/>

        <com.tss.views.TSSButton
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp10_s"
            android:layout_marginBottom="@dimen/dp10_s"
            android:background="@drawable/btn_settings_selector"
            tss:tss_width="0.1"
            tss:tss_scaleMode="byWidth" />

        <Spinner
            android:id="@+id/spn_unit"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>

</RelativeLayout>